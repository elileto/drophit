<%= form_with(model: profile, local: true) do |form| %>
  <% if profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :gender %>
    <%= form.text_field :gender, id: :profile_gender %>
  </div>

  <div class="field">
    <%= form.label :weight %>
    <%= form.number_field :weight, id: :profile_weight %>
  </div>

  <div class="field">
    <%= form.label :height %> (inches or cm) 
    <%= form.text_field :height, id: :profile_height %>
  </div>

  <div class="field">
    <%= form.label :date_of_birth %>
    <%= form.date_select  :date_of_birth, { :include_blank => true, :start_year => 1950 }%>

  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
