<p id="notice"><%= notice %></p>



<h3 class="d-flex justify-content-center"><%= firstname_lastname(@user.firstname, @user.lastname)%></h3>
<br>
<p class="d-flex justify-content-center">
  <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
    View Profile
  </button>
</p>
<div class="collapse" id="collapseExample">
  <div class="card card-body">
    <%=@profile.find_each do |p|%>
    <ul class="list-group, list-group-flush">
  <li class="list-group-item"><strong>Email:</strong> <%= @user.email %></li>
  <li class="list-group-item"><strong> Gender: </strong> <%= p.gender%></li>
  <li class="list-group-item"><strong> Height: </strong> <%= p.height%></li>
  <li class="list-group-item"><strong> Weight: </strong> <%= p.weight%></li>
  <li class="list-group-item"><strong> Date of Birth: </strong> <%= p.date_of_birth%></li>
</ul>
      
    <%end%>
  </div>
</div>

<br>

<h5> My Workouts </h5>

<br>
<div class="row">
    <% @workouts.each do |p| %>
      <div class="col-lg-4 col-md-6">
      <div class="card">
      <%= image_tag(p.featureImage, :class => "card-img-top") %>
      <div class="card-body">
        <h5 class="card-title"><%= p.name %></h5>

      </div>
      </div>
      </div>
    <%end%>
</div>

<%= link_to 'Edit', edit_user_path(@user) %> |
