<% provide(:title, 'Sign up')%>


<div class="row">
<div class="col-md-6 offset-md-3">
<%= form_for(@user, url: signup_path) do |form| %>

  <%= render 'shared/error_messages'%>

  <div class="form-row">
    <div class="form-group col-md-6">
      <%= form.label :firstname, :for=>"validationServer01" %>
      <%= form.text_field :firstname, id: :user_firstname, :class => "form-control",  :placeholder => "First Name" %>
    </div>
    <div class="form-group col-md-6">
      <%= form.label :lastname%>
      <%= form.text_field :lastname, id: :user_lastname, :class => "form-control",  :placeholder => "Last Name" %>
    </div>
    </div>
    <div class="form-row">
    <%= form.label :email %>
    <%= form.email_field :email, id: :user_email, :class=> "form-control", :placeholder=>"email" %>
  </div>
  <div class="form-row">
  
    <%= form.label :password %>
    <%= form.password_field :password, id: :user_password, :class=>"form-control", :placeholder=>"Password"%>

  </div>
    <div class="form-row">
  
   <%= form.label :password_confirmation, "Confirmation" %>
      <%= form.password_field :password_confirmation, class: 'form-control', :placeholder=>"Confirm Password" %>
  
  </div>
  </br>
  <div class="form-row">
  
   <%= form.submit  "Create my Account", :class=>"btn btn-primary" %>
   
   </div>
   <% end %>
   </div> 
  </div>


  

